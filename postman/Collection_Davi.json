							"});\r",
							"\r",
							"\r",
							"const schema = {\r",
							"  \"type\": \"object\",\r",
							"  \"properties\": {\r",
							"    \"data\": {\r",
							"      \"type\": \"object\",\r",
							"      \"properties\": {\r",
							"        \"empNumber\": { \"type\": \"number\" },\r",
							"        \"lastName\": { \"type\": \"string\" },\r",
							"        \"firstName\": { \"type\": \"string\" },\r",
							"        \"middleName\": { \"type\": \"string\" },\r",
							"        \"employeeId\": { \"type\": \"string\" },\r",
							"        \"terminationId\": { \"type\": [\"null\", \"string\"] }\r",
							"      },\r",
							"      \"required\": [\"empNumber\", \"lastName\", \"firstName\", \"middleName\", \"employeeId\"]\r",
							"    },\r",
							"    \"meta\": { \"type\": \"array\" },\r",
							"    \"rels\": { \"type\": \"array\" }\r",
							"  },\r",
							"  \"required\": [\"data\", \"meta\", \"rels\"]\r",
							"};\r",
							"\r",
							"pm.test(\"La respuesta se ajusta al esquema JSON\", function () {\r",
							"    const responseData = pm.response.json();\r",
							"    pm.response.to.have.jsonSchema(schema);\r",
