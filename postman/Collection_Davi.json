		{
			"name": "Token_CSRF",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"El código de estado es 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"responseBody = pm.response.text();\r",
							"const regex = /:token=\"&quot;([^\"]+)&quot;\"/;\r",
							"const match = responseBody.match(regex);\r",
							"\r",
							"\r",
							"if (match[1]) {\r",
							"\r",
							"    pm.environment.set(\"csrf_token\", match[1]);\r",
							"    console.log(\"Token CSRF guardado exitosamente: \" + match[1]);\r",
							"} else {\r",
							"\r",
							"    console.error(\"ERROR: No se pudo extraer el token CSRF. La respuesta puede no ser la página de login.\");\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
